class Tito < Formula
  desc "A tool for managing rpm based git projects"
  homepage "https://github.com/rpm-software-management/tito"
  url "https://github.com/jfhbrook/public/releases/download/coprctl-{{ version }}-{{ patch }}/coprctl-{{ version }}.tar.gz"
  sha256 "{{ sha }}"
  license "MIT"

  depends_on "bash" => :recommended
  depends_on "docker" => :optional

  def install
    bin.install "bin/tito-docker" => "tito"
  end

  test do
    system "false"
  end
end
