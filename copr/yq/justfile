VERSION := "4.34.1"

# Test building the main branch with tito
test:
  tito build --rpm --test

# Tag the release with tito
tag:
  tito tag --use-version {{VERSION}}

_push_tag:
  git push origin --follow-tags

# Apply copr configuration
apply:
  coprctl apply -f ./copr.yml

# Publish the release with tito
publish: tag _push_tag
