SPEC := "yq.spec"

# Build the source rpm
srpm:
  spec="$(pwd)/{{SPEC}}" outdir="$(pwd)" builddir="$(pwd)/build" downloaddir="$(pwd)/downloads" make -f ../../.copr/Makefile

# Verify the source rpm
verify:
  spec="$(pwd)/{{SPEC}}" outdir="$(pwd)" builddir="$(pwd)/build" downloaddir="$(pwd)/downloads" make -f ../../.copr/Makefile

lint:
  shellcheck ./copr/srpm.sh

# Build and verify
test: srpm verify

# Clean files created from building and verifying
clean:
  rm -rf ./build
  rm -rf ./downloads
  rm -f *.src.rpm
  rm -f *.tar.gz

# Apply copr configuration
apply:
  coprctl apply -f ./copr.yml

publish:
  git push origin
  copr build-package jfhbrook/joshiverse --name "$(sed 's/\.spec//' <<< '{{SPEC}}')"
