# Test that we can successfully build the rpm
test:
  mkdir -p ./builddir
  builddir="$(pwd)/builddir" spec="$(pwd)/yq.spec" outdir="$(pwd)" make -f ../../.copr/Makefile
  rpmbuild --rebuild yq-*.src.rpm

# Clean up files created from testing
clean:
  rm -rf ./src
  rm -rf ./builddir
  rm -f yq-*.src.rpm

# Apply copr configuration
apply:
  coprctl apply -f ./copr.yml

publish:
  git push origin
  copr build-package jfhbrook/joshiverse --name yq
